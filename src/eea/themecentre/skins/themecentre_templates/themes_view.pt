<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);
                       bar python:request.set('disable_plone.rightcolumn', 1);"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea">

<head>
</head>

<body>
<div id="themes-sitemap"  metal:fill-slot="content-core" tal:define="view nocall:context/@@themes_browser_view">

<div id="top-news-area">

</div>
    <section id="topics-search" tal:define="
            search_apps string:${context/portal_url}/eea-custom-search;
            action python:search_apps;
            use_search_links python:False;
            search_button_class string:eea-input-submit;
            search_input_class string:eea-input-query;
            search_input_placeholder_text string:Search topics;
            tags string:${context/portal_url}/eea-custom-search.tags">
            <tal:search metal:use-macro="context/eea_searchbox/macros/quick_search_form" />
            <form method="get" class="gsc-search-box gsc-search-box-tools eea-input-form" tal:attributes="action action" autocomplete="off">
                <div class="eea-input-box">
                    <input type="text" name="q" class="gsc-input-query eea-input-query" tal:attributes="
                            placeholder python:'Search topics';
                            data-tags-url tags" />
                    <button class="eea-input-submit">
                        <span class="eea-icon eea-icon-search eea-icon-marginless eea-icon-submit-icon"></span>
                    </button>
                    <input name="source" type="hidden"><div class="autocomplete-items eea-input-autocomplete"></div>
                </div>
            </form>


        <div id="themes-megatopics-area">
            <div class="portlet-megatopic" tal:repeat="promo view/getPromotions">
                <tal:defines
                         tal:define="promo_title python:promo.keys()[0];
                                promo_list python:promo[promo_title];
                                        promo_url python:promo_list[0][0] if promo_list else [];
                                "
                         tal:condition="promo_list">
                        <div class="portletHeader" tal:content="python:context.translate(promo_title)">
                            Air and climate
                        </div>

                        <tal:mainthemes tal:repeat="theme promo_list">
                            <tal:subtopics tal:define="theme_obj python: theme[2].getObject(); themecentre_view theme_obj/@@themecentre_utils;
                                    folders themecentre_view/getSubtopics;">
                           <h2 class="eea-header-plain" tal:condition="python:not folders">
                               <a tal:attributes="href python:theme[1]" tal:content="python:theme[2].Title">Air pollution</a>
                           </h2>
                                <ul class="eea-no-list-style" tal:condition="folders">
                                    <li>
                                        <h3 class="eea-list-header mb-0" tal:attributes="id python: theme[2].id">
                                            <a tal:attributes="href python:theme[1]" tal:content="python:theme[2].Title">Air pollution</a>
                                        </h3>
                                    </li>
                                    <li tal:repeat="folder folders">
                                        <a tal:attributes="href folder/getURL; title folder/Title;"
                                                 tal:content="folder/Title">Folder links</a>
                                    </li>
                                </ul>
                            </tal:subtopics>
                        </tal:mainthemes>
            </tal:defines>
            </div>
        </div>

    </section>
<section id="editors-choice">
    <h1 i18n:translate="" class="h1">Editor's choice</h1>
    <div class="eea-tiles">
                      <div class="eea-tile" tal:repeat="promo_list view/getThemeIndexPromotions">
                      <div class="eea-tileInner">
                      <tal:defines tal:define="promo python:promo_list[0];
                      themes python: promo_list[1];
                      url promo/getURL;
                      title promo/Title;">
                      <a href="#" tal:attributes="href url"  class="eea-tileLink">
                      <div class="eea-tileHead">
                      <div class="eea-tileThumb">
                      <img src="#" alt="Title" class="eea-tileThumbImg"  tal:attributes="src string:${url}/image_preview; alt title">
                      </div>
                      </div>
                      </a>
                      <div class="eea-tileBody">
                      <a href="#" tal:attributes="href url"  class="eea-tileLink eea-tileLinkBody">
                      <h2 class="eea-tileTitle" tal:content="title">Title</h2>
                      <div class="eea-tileDescription" tal:content="promo/Description">Description
                      </div>
                      </a>
                      <div class="eea-tileMetadata">
                      <div class="eea-tileTopic" >
                      <tal:topics tal:repeat="theme themes">
                      <a href="#" tal:attributes="href theme/url" tal:content="theme/title" class="eea-tileTopicLink eea-btn eea-btn-light">Theme topic</a>
                      </tal:topics>
                      </div>

                      <time  tal:attributes="datetime promo/EffectiveDate" class="eea-tileIssued" tal:content="python: toLocalizedTime(promo.effective)">26 Mar 2019
                      </time>
                      </div>
                      </div>
                      </tal:defines>
                      </div>
                      </div>
                      </div>
</section>
</div>
</body>
</html>


