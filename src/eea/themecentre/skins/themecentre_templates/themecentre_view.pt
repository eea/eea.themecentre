<tal:block tal:define="foo python:request.set('disable_plone.rightcolumn', 1);"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea">

<head>
</head>
<body>

    <div metal:fill-slot="main" class="content-core">
    <metal:main-macro define-macro="main" tal:define="
            object_title context/@@plone_context_state/object_title;
            object_title_lowercase object_title/lower;
            themecentre_view context/@@themecentre_utils;
            ">

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <div class="topic-intros">
            <a href="#" i18n:translate="" class="moreLink topic-intro">Intro</a>
            <a href="#" i18n:translate="" class="moreLink topic-intro">EU policies</a>
            <a href="#" i18n:translate="" class="moreLink topic-intro">EEA activities</a>
        </div>

        <div class="topic-img-container">
            <img tal:attributes="src python:context.getCanonical().absolute_url() + '/theme_image/image_panoramic'" alt="" class="topic-img" />
        </div>

        <div metal:define-macro="subtopics" class="" id="subtopics"
                tal:define="
                folders themecentre_view/getSubtopics;
                soer_topic_path python: '/' + context.absolute_url(1) + '/briefings-soer';
                soer_topic python: themecentre_view.getSubtopics(path=soer_topic_path);" tal:condition="python:soer_topic or folders">

            <h2 i18n:translate="">Subtopics</h2>
            <tal:existssoer tal:condition="soer_topic">
                <tal:defines tal:define="
                        soer_topic python:soer_topic[0].getObject();
                        soer_topics python:soer_topic.queryCatalog()">
                    <h4 tal:content="soer_topic/Title">Folder links</h4>
                    <ul class="border-bottom-spacer inline-list-style ma-0">
                        <li tal:repeat="folder soer_topics" tal:condition="soer_topics" class="subtopic-list-item">
                            <a tal:attributes="href folder/getURL; title folder/Title;"
                                    tal:content="folder/Title">Folder links</a>
                        </li>
                    </ul>
                </tal:defines>
            </tal:existssoer>

            <ul tal:condition="folders" class="inline-list-style ma-0">
                <li tal:repeat="folder folders">
                    <a tal:attributes="href folder/getURL; title folder/Title;"
                            tal:content="folder/Title" class="light-color">Folder links</a>
                </li>
            </ul>

        </div>

        <!--?    themecentre sections     -->
        <section class="themecentre-section section-storytelling"
             tal:define="stories themecentre_view/getLatestStorytelling" tal:condition="stories">
        </section>

        <section class="themecentre-section section-gismap"
                 tal:define="gismap themecentre_view/getPromotedGISMap" tal:condition="gismap">
            <a href="#">GIS Map Application</a>
            <h2 tal:content="gismap/Title"></h2>
            <tal:block tal:replace="structure gismap/gis_inline" />

            <a href="" tal:attributes="href string:gis" class="readMore" i18n:translate="">
                <span i18n:translate="">All GIS Map Application on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>
        </section>

        <section class="themecentre-section section-dashboard"
                 tal:define="dashboard themecentre_view/getPromotedTableauDashboard" tal:condition="dashboard">
            <a href="#">Dashboard</a>
            <h2 tal:content="dashboard/Title"></h2>
            <tal:embed  content="structure dashboard/embed" />

            <a href="" tal:attributes="href string:interactive" class="readMore" i18n:translate="">
                <span i18n:translate="">All Tableau Dashboards on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>
        </section>

        <section class="themecentre-section section-indicators"
                 tal:define="indicators themecentre_view/getLatestIndicators" tal:condition="indicators">
            <a href="#">Indicators</a>
            <tal:items tal:repeat="indicator indicators">
                    <div class="card" tal:define="url indicator/getURL">
                        <h2 tal:content="indicator/Title"></h2>
                        <img src="" tal:attributes="src string:${url}/image_preview" alt="" />
                        <a href="" tal:attributes="href url" class="readMore" i18n:translate="">Read more</a>
                    </div>
            </tal:items>

            <a href="" tal:attributes="href string:indicators" class="readMore" i18n:translate="">
                <span i18n:translate="">All indicators on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>

        </section>

        <section class="themecentre-section section-news"
                 tal:define="news themecentre_view/getLatestNews" tal:condition="news">
            <a href="#">News</a>

            <tal:items tal:repeat="snews news">
                <div class="card">
                    <h2 tal:content="snews/Title"></h2>
                    <img src="" tal:attributes="src string:${snews/getURL}/image_preview" alt="" />
                    <p tal:content="snews/Description"></p>
                </div>
                
            </tal:items>

            <a href="" tal:attributes="href string:indicators" class="readMore" i18n:translate="">
                <span i18n:translate="">All News on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>
        </section>

        <section class="themecentre-section section-publications"
                 tal:define="publications themecentre_view/getLatestPublications" tal:condition="publications">
            <a href="#">Publication</a>

            <tal:items tal:repeat="publication publications">
                <div class="card">
                    <h2 tal:content="publication/Title"></h2>
                    <img src="" tal:attributes="src string:${publication/getURL}/image_preview" alt="" />
                    <p tal:content="publication/Description"></p>
                </div>

            </tal:items>

            <a href="" tal:attributes="href string:publications" class="readMore" i18n:translate="">
                <span i18n:translate="">All Publication on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>
        </section>

        <section class="themecentre-section section-multimedia"
                 tal:define="multimedia themecentre_view/getPromotedMultimedia" tal:condition="multimedia">
            <h2 tal:content="multimedia/Title"></h2>
            <a href="#">Multimedia</a>
            <a  tal:define="objhref multimedia/absolute_url; cloudurl multimedia/getCloudUrl|nothing" tal:attributes="href python: cloudurl or objhref" target="_blank">
                <img tal:attributes="src string:${objhref}/image_fullwidth" />
            </a>

            <a href="" tal:attributes="href string:multimedia" class="readMore" i18n:translate="">
                <span i18n:translate="">All Multimedia on</span>
                <span i18n:translate="" tal:content="object_title_lowercase"></span>
            </a>
        </section>
        <!--?   end themecentre sections     -->


        <metal:portlets use-macro="context/themecentre_overview/macros/main" />

        <div class="visualClear"><!-- --></div>

    </metal:main-macro>
    </div>

</body>
</html>
