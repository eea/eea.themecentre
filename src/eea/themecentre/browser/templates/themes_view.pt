<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);
                       bar python:request.set('disable_plone.rightcolumn', 1);"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea">

<head>
</head>

<body>
<div id="themes-sitemap"  metal:fill-slot="content-core">

<div id="top-news-area">


    <div id="megatopics-area">
        <div class="portlet-megatopic" tal:repeat="promo view/getPromotions">
            <dl class="portlet promo-nav-portlet" id="air-and-climate-megatopic"
                tal:define="promo_title python:promo.keys()[0];
                            promo_list python:promo[promo_title];
                            promo_url python:promo_list[0][1].getObject().getCanonical().absolute_url();">
                <dd class="portletItem">
                    <img  tal:attributes="title promo_title; src string:${promo_url}/theme_image/image_mini">
                    <div class="portletHeader" tal:content="python:context.translate(promo_title)">
                        Air and climate
                    </div>
                    <ul class="">
                        <li tal:repeat="theme promo_list">
                            <a tal:attributes="href python:theme[0]" tal:content="python:theme[1].Title">Air pollution</a></li>
                    </ul>
                </dd>
            </dl>
        </div>
    </div>
    
<div class="visualClear"><!-- &nbsp; --></div>
</div>

<tal:block tal:define="themes view/getThemes">

    <div id="all-topics-list" class="themes-view-image-icon">
        <h2 i18n:translate="">All topics</h2>

        <div class="contentColumnOne">
            <h3 i18n:translate="">What is happening?<br />Environmental issues</h3>
            <ul tal:define="items python:themes[0]">
                <tal:block tal:repeat="item items">
                    <li tal:define="original_obj_url python:item[0];
                                    trans_obj python:item[1];" tal:condition="python:item[1].ExpirationDate() == 'None'">
                        <img tal:attributes="src string:${original_obj_url}/theme_image/image_icon"  />
                        <a tal:attributes ="href string:${trans_obj/absolute_url};
                                            class string:link-plain"
                           tal:content="trans_obj/Title"></a>
                    </li>
                </tal:block>
            </ul>
        </div>

        <div class="contentColumnTwo themes-view-image-icon">
            <h3 i18n:translate="">Why is it happening?<br />Sectors and activities</h3>
            <ul tal:define="items python:themes[1]">
                <tal:block tal:repeat="item items">
                    <li tal:define="original_obj_url python:item[0];
                                    trans_obj python:item[1]" tal:condition="python:item[1].ExpirationDate() == 'None'">
                        <img tal:attributes="src string:${original_obj_url}/theme_image/image_icon"  />
                        <a tal:attributes ="href string:${trans_obj/absolute_url};
                                            class string:link-plain"
                           tal:content="trans_obj/Title"></a>
                    </li>
                </tal:block>
            </ul>
        </div>

    </div>

    <div class="visualClear topics-bottom">
        <div class="contentColumnOne themes-view-image-icon">
            <h3 i18n:translate="">Environment in different regions and specific areas</h3>
            <ul tal:define="items python:themes[2]">
                <tal:block tal:repeat="item items">
                    <li tal:define="original_obj_url python:item[0];
                                    trans_obj python:item[1]" tal:condition="python:item[1].ExpirationDate() == 'None'">
                        <img tal:attributes="src string:${original_obj_url}/theme_image/image_icon"  />
                        <a tal:attributes ="href string:${trans_obj/absolute_url};
                                            class string:link-plain"
                           tal:content="trans_obj/Title"></a>
                    </li>
                </tal:block>
            </ul>
        </div>

        <div class="contentColumnTwo themes-view-image-icon">
            <h3 i18n:translate="">Across environmental issues and sectors</h3>
            <ul tal:define="items python:themes[3]">
                <tal:block tal:repeat="item items">
                    <li tal:define="original_obj_url python:item[0];
                                    trans_obj python:item[1]" tal:condition="python:item[1].ExpirationDate() == 'None'">
                        <img tal:attributes="src string:${original_obj_url}/theme_image/image_icon"  />
                        <a tal:attributes ="href string:${trans_obj/absolute_url};
                                            class string:link-plain"
                           tal:content="trans_obj/Title"></a>
                    </li>
                </tal:block>
            </ul>
        </div>
    </div>

</tal:block>

<div class="visualClear"><!-- --></div>
<br /><br />

</div>
</body>
</html>
