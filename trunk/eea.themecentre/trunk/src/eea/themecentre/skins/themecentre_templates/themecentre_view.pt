<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>
<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main" tal:define="object_title context/@@plone_context_state/object_title;">

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p class="documentDescription">
           <span tal:condition="context/Description" tal:replace="context/Description">Description</span>
           <a tal:condition="python:context.has_key('intro')" class="internal-link moreLink" href="intro">More</a>
        </p>
        <div class="visualClear"><!--&nbsp; --></div>
                    <!-- keyfacts slideshow-->
                    <metal:keyfacts tal:define="view nocall:context/@@soer_frontpage_logic;
                                                background_img_path python:context.getCanonical().absolute_url() + '/theme_image/image_large'">
                            <div metal:use-macro="here/soer_frontpage/macros/keyfacts-slider">
                                keyfacts
                            </div>
                    </metal:keyfacts>   

        <div class="visualClear"><!--&nbsp; --></div>
        
	<div metal:define-macro="subtopics" class="portletGradientStandard"
	     tal:define="themecentre_view context/@@themecentre_utils; 
	                 folders themecentre_view/getSubtopics;" id="subtopics"
			 tal:condition="folders"> 
	   <h2>Subtopics</h2> 
	   <ul>  
		<li tal:repeat="folder folders">  
		    <a tal:attributes="href folder/getURL; title folder/Title;" 
		    tal:content="folder/Title">Folder links</a> 
		</li> 
           </ul> 
	</div> 


        <metal:portlets use-macro="context/themecentre_overview/macros/main" />

        <div class="visualClear"><!-- --></div>

    </metal:main-macro>
    </div>

</body>
</html>
