<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>
<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main" tal:define="object_title context/@@plone_context_state/object_title;">

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.documentactions" />

        <div class="visualClear"><!--&nbsp; --></div>

        <div class="figure-right"
             tal:condition="python: hasattr(context.getCanonical(), 'theme_image')">
            <div class="figure">
                 <img src=""
                      tal:attributes="src python: context.getCanonical().absolute_url() + '/image_mini';alt object_title"  />
             </div>
        </div>

        <p class="documentDescription"
           tal:content="context/Description"
           tal:condition="context/Description">
            Description
        </p>

        <div class="plain" tal:condition="context/CookedBody|nothing">
            <tal:text tal:define="text python:context.CookedBody(stx_level=2);"
              tal:replace="structure text" />
        </div>

        <div class="visualClear"><!--&nbsp; --></div>

            <div id="boxes" tal:define="view nocall:context/@@soer_frontpage_logic;">
                <div id="soer-top-area" style="margin:20px 0 50px 0;">
                    <!-- all key facts and messages -->
                    <dl style="float:left;width:370px;" class="portlet slidePortlet" >
                        <dt class="portletHeader" style="padding:5px;">Key facts and messages</dt>
                         <dd class="portletItem" style="left: 370px;"  tal:repeat="item view/getAllFactsAndMessages">
                           <span>
                              <span tal:replace="structure item/text"></span>
                               <a href="" title="Read more of the key fact" class="moreLink"
                               tal:attributes="href item/url">more</a>
                            </span>
                         </dd>
                    </dl>
                </div>
            </div>

        <metal:portlets use-macro="context/themecentre_overview/macros/main" />

        <div class="visualClear"><!-- --></div>

    </metal:main-macro>
    </div>

</body>
</html>
