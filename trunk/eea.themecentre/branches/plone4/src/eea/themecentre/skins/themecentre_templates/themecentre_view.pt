<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>
<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main" tal:define="object_title context/@@plone_context_state/object_title;">

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p class="documentDescription">
           <span tal:condition="context/Description" tal:replace="context/Description">Description</span>
           <a tal:condition="python:context.has_key('intro')" class="internal-link moreLink" href="intro">More</a>
        </p>
        <div class="visualClear"><!--&nbsp; --></div>
             
            <div class="figure">
                 <img src=""
                      tal:attributes="src python: context.getCanonical().absolute_url() + '/theme_image';alt object_title" style="width:615px; height: 346px;"  />
                    <div id="boxes" tal:define="view nocall:context/@@soer_frontpage_logic;
                      items view/getAllFactsAndMessages">
                            <div id="soer-top-area">
                                <!-- all key facts and messages -->
                                <dl style="width: 616px;
                                           height: 156px !important;
                                           position: relative;
                                           top: -160px;
                                           left: -2px;
                                           opacity: 0.9;
                                           margin-bottom: -140px;" 
                                    class="portlet slidePortlet" >
                                    <dt class="portletHeader" style="padding:5px;">Key facts and messages</dt>
                                     <dd class="portletItem" style="left: 615px;"  tal:repeat="item items">
                                       <span>
                                          <span tal:replace="structure item/text"></span>
                                           <a href="" title="Read more of the key fact" class="moreLink"
                                           tal:attributes="href item/url">more</a>
                                        </span>
                                     </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="visualClear"><!--&nbsp; --></div>

        <h3>Browse catalogue</h3>
        <metal:portlets use-macro="context/themecentre_overview/macros/main" />

        <div class="visualClear"><!-- --></div>

    </metal:main-macro>
    </div>

</body>
</html>
