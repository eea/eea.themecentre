<metal:portlet metal:define-macro="portlet">
<tal:cond tal:define="isViewTemplate context/@@plone_context_state/is_view_template;" tal:condition="isViewTemplate">
<div class="promo roundedCorners"
    tal:define="themecentre_view context/@@themecentre_utils;
    title themecentre_view/getDataCentreName|nothing;"
    tal:condition="python: title and isViewTemplate">
        <h3>
            <a href="dc" class="internal-link" title="Data centre overview">
                <span id="theme-datacentre"  tal:content="string: ${title} data centre">data centre</span>
            </a>
        </h3>
    </div>
</tal:cond>
</metal:portlet>
