<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
<metal:css fill-slot="css_slot">
<style>

#portal-column-content #content {
    margin-right: 0 ! important;
}
</style>

</metal:css>
</head>
<body>

    <metal:column-two fill-slot="column_two_slot"></metal:column-two>

    <div metal:fill-slot="main">
         <h1 tal:content="string:${here/Title} - overview"></h1>
    <metal:main-macro define-macro="main">

	<div class="content-column-one">
        <tal:articles define="specific nocall:context/articles/articles_topic|nothing;
	                      feeds specific/@@smartfolder_portlets|nothing"
	              repeat="portlet feeds"
		      tal:condition="specific">
        <metal:macro use-macro="here/portlet_themes_common/macros/portlet" />
        </tal:articles>
        <tal:publications define="specific nocall:context/publications/publications_topic|nothing;
	                      feeds specific/@@smartfolder_portlets|nothing"
	              repeat="portlet feeds"
		      tal:condition="specific">
        <metal:macro use-macro="here/portlet_themes_common/macros/portlet" />
        </tal:publications>
        <metal:macro use-macro="here/portlet_themes_rdf/macros/portlet" />
        <tal:indicators tal:define="portlet context/indicators/@@portlet_faceted_logic|nothing">
            <metal:portlet use-macro="here/portlet_themes_common/macros/portlet" />
        </tal:indicators>
	</div>

	<div class="content-column-two">
        <metal:macro use-macro="here/portlet_themes_related/macros/portlet" />

        <tal:portlets repeat="portlet context/@@theme_portlets">
        <metal:macro use-macro="here/portlet_themes_common/macros/portlet" />
        </tal:portlets>
	</div>

    </metal:main-macro>
    </div>

</body>
</html>
