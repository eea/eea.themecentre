<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>
<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main"
    tal:define="frontpage_view context/@@frontpage_highlights;">

        <div class="content-column-one">
            <div metal:define-macro="subfolders"
                 tal:define="themecentre_view context/@@themecentre_utils;
                 folders themecentre_view/getThemeFolders;"
                 id="subfolders">
                 <h2>Subtopics</h2>
                <ul> 
                    <li tal:repeat="folder folders"> 
                        <a tal:attributes="href folder/getPath; title folder/Title;" tal:content="folder/Title">Folder links</a>
                    </li>
                </ul>
            </div>
            <div metal:use-macro="here/frontpage_view/macros/whatsnew-gallery">
                whatsnew gallery
            </div>
        </div>

    </metal:main-macro>
    </div>

</body>
</html>
